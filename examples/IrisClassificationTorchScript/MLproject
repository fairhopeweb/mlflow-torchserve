name: iris-classification

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      max_epochs: {type: int, default: 100}
      devices: {type: int, default: None}
      strategy: {type str, default: "None"}

    command: |
          python iris_classification.py \
            --max_epochs {max_epochs} \
            --devices {devices} \
            --strategy {strategy}
